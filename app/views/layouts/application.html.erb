<!DOCTYPE html>
<html>
  <head>
    <title>MpTirthYatra</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid cntner-fld">
      <% if current_user.present? %>
        <div class="row top-logo-bar">
          <div class="col-md-12 signin-top-logo-div">
            <%= image_tag "logo0.jpg" %>
          </div>
          <div class="col-md-12 login-status-bar">
            <div class="pull-left">आप लॉग इन है तहसील - <%= current_user.user_name.capitalize %></div>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-default pull-right') %> 
          </div>
        </div>
      <% else %>
        <div class="row top-logo-bar">
          <div class="col-md-11 left-logo-div">
            <%= image_tag "logo0.jpg" %>
          </div>
          <div class="col-md-1 right-logo-div"> <%= image_tag "mplogo1.jpg", class: 'mplogo-cls' %></div>
        </div>
      <% end %>
      <div class="row">
        <div id="alert_msg" class="col-md-8 col-md-offset-2 alert_message">
          <% if flash[:notice].present? %>
            <p class="alert notice alert-<%= flash[:notice].present? ? "success" : "danger"%>">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <%= flash[:notice] %>
            </p>
          <% end %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="row-fluid">
          <%= yield %>
        </div>
      </div>
      <div class="row-fluid bottom-bar">
        <div class="container-fluid">
          <div class="col-md-11">
            <div class="row">
              <div class="col-md-6">
                <%= image_tag "nic.jpg", class: 'col-md-2' %>
              </div>
              <div class="col-md-6">
                Design by Umakant Rajpoot
              </div>
            </div>
          </div>
          <div class="col-md-1"></div>
        </div>
      </div>
    </div>
  </body>
</html>
